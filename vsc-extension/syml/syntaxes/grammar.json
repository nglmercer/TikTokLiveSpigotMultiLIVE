					"match": "\\§b(.*?)(?=\\&|\\§|\\$|$)"
				},
				{
					"name": "spigot.red.syml",
					"match": "\\§c(.*?)(?=\\&|\\§|\\$|$)"
				},
				{
					"name": "spigot.light_purple.syml",
					"match": "\\§d(.*?)(?=\\&|\\§|\\$|$)"
				},
				{
					"name": "spigot.yellow.syml",
					"match": "\\§e(.*?)(?=\\&|\\§|\\$|$)"
				},
				{
					"name": "spigot.white.syml",
					"match": "\\§f(.*?)(?=\\&|\\§|\\$|$)"
				},
				{
					"name": "spigot.bold.syml",
					"match": "\\§l(.*?)(?=\\&|\\§|\\$|$)"
				}
			]
		},
		"spigot-colors-2": {
			"patterns": [
				{
					"name": "spigot.black.syml",
					"match": "\\&0(.*?)(?=\\&|\\§|\\$|$)"
